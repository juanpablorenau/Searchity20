<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView_friendChat"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_person"/>

        <TextView
            android:id="@+id/textView_name_friendChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/circleImageView_friendChat"
            android:text="Juan Pablo Renau"
            android:fontFamily="@font/comfortaa_light"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textView_university_friendChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_name_friendChat"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/circleImageView_friendChat"
            android:text="UPV"
            android:fontFamily="@font/comfortaa_light"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/textView_degree_friendChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_name_friendChat"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/textView_university_friendChat"
            android:text="INF+ADE"
            android:fontFamily="@font/comfortaa_light"
            android:textColor="@color/gray"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>